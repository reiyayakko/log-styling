{
    // https://www.typescriptlang.org/ja/tsconfig
    "compilerOptions": {
        "declaration": true,
        // module
        "target": "ES2018",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "baseUrl": "./src",
        // types
        "lib": ["ES2019"],
        "typeRoots": [],
        "strict": true,
        // lint
        "allowUnreachableCode": false,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
    }
}